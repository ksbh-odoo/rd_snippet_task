<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_snippet" name="Sale Orders">
        <section class="sale_snippet">
            <div class="container ">
                <div id="saleorder_snippet">
                    <div>All Sale Orders</div>
                </div>
            </div>
       </section>   
    </template>



    <template id="sale_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="SaleSnippetOptions" data-selector=".sale_snippet">
                <we-checkbox string="Confirm Orders" data-name="sale_order_confirm" data-attribute-name="orderConfirm" data-select-data-attribute="true"/>
            </div>
        </xpath>
    </template>

</odoo>


